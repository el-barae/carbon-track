datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Credit {
  id        Int      @id @default(autoincrement())
  projectId String
  vintage   String
  certifier String
  amount    Float
  owner     String
  createdAt DateTime @default(now())
}

model User {
  id        Int      @id @default(autoincrement())
  wallet    String   @unique
  footprint Float    @default(0)
  createdAt DateTime @default(now())
}
